                                            <TextBox.Resources>
                                                <Style TargetType="{x:Type Border}">
                                                    <Setter Property="CornerRadius" Value="9"/>
                                                    <Setter Property="BorderBrush" Value="Black"/>
                                                </Style>
                                            </TextBox.Resources>
                                        </TextBox>

