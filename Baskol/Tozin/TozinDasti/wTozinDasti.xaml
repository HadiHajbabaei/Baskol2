                                   FontFamily="Far.Yas" FontSize="12"   Foreground="#313552" FontWeight="Bold" 
                                         BorderBrush="White" VerticalContentAlignment="Top" TextAlignment="Center"  Background="#f5f4f6" >
                                            <TextBox.Resources>
                                                <Style TargetType="{x:Type Border}">
                                                    <Setter Property="CornerRadius" Value="9"/>
                                                    <Setter Property="BorderBrush" Value="Black"/>
                                                </Style>
                                            </TextBox.Resources>
                                        </TextBox>

                                        <TextBlock  Grid.Column="5" Grid.Row="1"  Text="مشتری :" Style="{StaticResource Text}" />
                                        <TextBox Name="TxtCustomer" Grid.Row="1" Grid.Column="7"  IsReadOnly="True"
                                   FontFamily="Far.Yas" FontSize="12"   Foreground="#313552" FontWeight="Bold" 
                                         BorderBrush="White" VerticalContentAlignment="Top" TextAlignment="Center"  Background="#f5f4f6" >
                                            <TextBox.Resources>
                                                <Style TargetType="{x:Type Border}">
                                                    <Setter Property="CornerRadius" Value="9"/>
                                                    <Setter Property="BorderBrush" Value="Black"/>
                                                </Style>
                                            </TextBox.Resources>
                                        </TextBox>



                                        <TextBlock Grid.Row="1" Grid.Column="9"  Text="محصول :" Style="{StaticResource Text}" />

