                                            <TextBox.Resources>
                                                <Style TargetType="{x:Type Border}">
                                                    <Setter Property="CornerRadius" Value="9"/>
                                                    <Setter Property="BorderBrush" Value="Black"/>
                                                </Style>
                                            </TextBox.Resources>
                                        </TextBox>
                                        <TextBlock Grid.Row="5" Grid.Column="2"  Text="ساعت   :" Style="{StaticResource Text}" />
                                        <TextBox Name="TxtTime" Grid.Row="5" Grid.Column="4"  IsReadOnly="True"
                                   FontFamily="Far.Yas" FontSize="15"     Foreground="#313552" FontWeight="Bold" 
                                         BorderBrush="White" VerticalContentAlignment="Top" TextAlignment="Center"     Background="#f5f4f6" >
                                            <TextBox.Resources>
                                                <Style TargetType="{x:Type Border}">
                                                    <Setter Property="CornerRadius" Value="9"/>
                                                    <Setter Property="BorderBrush" Value="Black"/>
                                                </Style>
                                            </TextBox.Resources>
                                        </TextBox>
                                        <TextBlock  Grid.Column="6" Grid.Row="1"  Text="مشتری :" Style="{StaticResource Text}" />

                                        <ComboBox Height="35" Grid.Row="1" Grid.Column="8"
                                           FontFamily="Far.Yas" FontSize="12"    Foreground="#313552" FontWeight="Bold"
