                                                            Binding="{Binding Tozin1Time}"/>




                                    </DataGrid.Columns>
                                </DataGrid>

                                <Border Grid.Row="2" BorderBrush="#4f89c9" Margin="12" BorderThickness="1" CornerRadius="5">

                                    <Grid >
                                        <Grid.ColumnDefinitions >
                                            <ColumnDefinition Width="*"/>
