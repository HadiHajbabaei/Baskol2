                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </TabItem.Resources>

                    <Grid >
                        <Grid Grid.Row="1">
                            <Grid >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="5"/>
                                    <RowDefinition Height="150"/>
                                    <RowDefinition Height="5"/>
                                    <RowDefinition Height="60"/>
                                    <RowDefinition Height="10"/>
                                </Grid.RowDefinitions>

