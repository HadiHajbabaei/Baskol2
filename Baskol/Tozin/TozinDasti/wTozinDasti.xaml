                                          SelectedValuePath="SabtMahsolPuID" HorizontalContentAlignment="Stretch">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Margin="2" Text="{Binding SabtMahsolName}"/>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                            <ComboBox.ItemContainerStyle>
                                                <Style TargetType="{x:Type ComboBoxItem}">
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate>
                                                                <Grid x:Name="gd" TextElement.Foreground="Black">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition/>
                                                                        <ColumnDefinition/>
                                                                        <ColumnDefinition/>
                                                                    </Grid.ColumnDefinitions>
                                                                    <TextBlock Margin="5" Grid.Column="0" Text="{Binding SabtMahsolName}"/>
                                                                </Grid>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="ComboBoxItem.IsSelected" Value="True">
                                                                        <Setter TargetName="gd"  Property="Background" Value="Gray"></Setter>
                                                                        <Setter TargetName="gd"  Property="TextElement.Foreground" Value="White"></Setter>
                                                                    </Trigger>
                                                                    <Trigger Property="ComboBoxItem.IsMouseOver" Value="True">
                                                                        <Setter TargetName="gd"  Property="Background" Value="Blue"></Setter>
                                                                        <Setter TargetName="gd"  Property="TextElement.Foreground" Value="White"></Setter>
                                                                    </Trigger>

                                                                    <!--IsHighlighted and IsMouseOver is showing same effect but IsHighlighted is used for showing logical focus( for understanding check using tab key)-->

                                                                    <Trigger Property="ComboBoxItem.IsHighlighted" Value="True">
                                                                        <Setter TargetName="gd"  Property="Background" Value="#4f89c9"></Setter>
                                                                        <Setter TargetName="gd"  Property="TextElement.Foreground" Value="White"></Setter>
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </ComboBox.ItemContainerStyle>
                                        </ComboBox>

                                        <TextBlock Grid.Row="5" Grid.Column="6"  Text="وزن :" Style="{StaticResource Text}" />
                                        <TextBox Name="TxtWeight" Grid.Row="5" Grid.Column="8"  
                                   FontFamily="Far.Yas" FontSize="15"     Foreground="#313552" FontWeight="Bold" IsReadOnly="False"
                                         BorderBrush="White" VerticalContentAlignment="Top" TextAlignment="Center" Background="#f5f4f6" >
                                            <TextBox.Resources>
                                                <Style TargetType="{x:Type Border}">
                                                    <Setter Property="CornerRadius" Value="9"/>
                                                    <Setter Property="BorderBrush" Value="Black"/>
                                                </Style>
                                            </TextBox.Resources>
                                        </TextBox>
                                        <Grid Grid.Row="7" Grid.Column="0">
                                            <Grid.ColumnDefinitions >
                                                <ColumnDefinition Width="auto"/>
                                                <ColumnDefinition Width="5"/>
                                                <ColumnDefinition Width="20"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock  Grid.Column="0"  FontSize="12" Text="فقط توزین های روز رانمایش بده" Style="{StaticResource Text}" VerticalAlignment="Stretch" HorizontalAlignment="Left" />
                                            <CheckBox x:Name="Chk"  Grid.Column="100"  VerticalAlignment="Top" HorizontalAlignment="Center"  />
                                        </Grid>
                                    </Grid>

                                </Border>
                                <Border Grid.Row="4" BorderBrush="#4f89c9" Margin="3" BorderThickness="1" CornerRadius="5">
                                    <Grid  >
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="15"/>
                                            <RowDefinition Height="37"/>
                                            <RowDefinition Height="15"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Button Name="btnSabt" Grid.Column="1" Grid.Row="1"  Background="#4f89c9"  Content="ثبت" FontFamily="mikhak" FontSize="14" Foreground="White" BorderBrush="#00000000"
                            Click="btnSabt_Click">
                                            <Button.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="20"/>
                                                </Style>
                                            </Button.Resources>
                                        </Button>
                                        <Button Name="btnNew" Grid.Column="3" Grid.Row="1"  Background="#4f89c9"  Content="تازه سازی" FontFamily="mikhak" FontSize="14" Foreground="White" BorderBrush="#00000000"
                            Click="btnNew_Click" >
                                            <Button.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="20"/>
                                                </Style>
                                            </Button.Resources>
                                        </Button>

                                        <Button Name="btnDelete" Grid.Column="5" Grid.Row="1"  Background="#4f89c9"  Content="حذف" FontFamily="mikhak" FontSize="14" Foreground="White" BorderBrush="#00000000"
                            Click="btnDelete_Click_1" >
                                            <Button.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="20"/>
                                                </Style>
                                            </Button.Resources>
                                        </Button>

                                    </Grid>
                                </Border>


                            </Grid>

                        </Grid>

                    </Grid>

                </TabItem>
                <TabItem Header="   توزین دوم   " Background="#4f89c9" FontFamily="mikhak"  Grid.Row="0">
