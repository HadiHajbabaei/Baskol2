<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation">
    <Style x:Key="Main" TargetType="{x:Type telerik:RadMaskedTextInput}">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
    </Style>
    <Style x:Key="DateTime" TargetType="{x:Type telerik:RadMaskedDateTimeInput}">
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="Culture" Value="fa-IR"/>
        <Setter Property="Mask" Value="yyyy/MM/dd"/>
    </Style>
</ResourceDictionary>